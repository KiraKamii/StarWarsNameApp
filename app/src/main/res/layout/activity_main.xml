<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starbackground"
    tools:context="com.CarlosJimenez.starwarsnameapp.MainActivity">

    <ImageView
        android:layout_width="138dp"
        android:layout_height="133dp"
        android:src="@drawable/deathstar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/editViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Your Star Wars Name"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your first and last name"
        android:textSize="17sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    //first and last name
    <EditText
        style="@style/editViewStyle"
        android:id="@+id/firstname_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="First Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        style="@style/editViewStyle"
        android:id="@+id/lastname_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Last Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mother's maiden name"
        android:textSize="17sp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    //maiden name
    <EditText
        style="@style/editViewStyle"
        android:id="@+id/maidenname_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Maiden name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the city you were born in"
        android:textSize="17sp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    //city
    <EditText
        style="@style/editViewStyle"
        android:id="@+id/city_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="City Born"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="310dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    //generate
    <Button
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="370dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Generate"
        android:onClick="generateName"
        />
    //result
    <TextView
        style="@style/editViewStyle"
        android:id="@+id/name_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="\?"
        android:textSize="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="450dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>